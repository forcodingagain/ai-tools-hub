{
  "compilerOptions": {
    // ============================================
    // 编译目标和库
    // ============================================
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    // ============================================
    // 模块系统
    // ============================================
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    // ============================================
    // JSX 和 React
    // ============================================
    "jsx": "preserve",
    "allowJs": true,

    // ============================================
    // 类型检查（增强）
    // ============================================
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // 额外的严格检查
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    // ============================================
    // 性能优化
    // ============================================
    "incremental": true,

    // ============================================
    // 路径别名
    // ============================================
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    // ============================================
    // Next.js 插件
    // ============================================
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  // ============================================
  // 包含和排除
  // ============================================
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "out"
  ]
}
